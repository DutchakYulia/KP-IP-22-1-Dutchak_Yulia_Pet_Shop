<h1>Відгуки</h1>

<table class="table">
  <thead>
    <tr><th>ID</th><th>Товар</th><th>Користувач</th><th>Оцінка</th><th>Approved</th><th>Дії</th></tr>
  </thead>
  <tbody>
    <% @reviews.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.product&.title %></td>
        <td><%= r.user&.email %></td>
        <td>⭐ <%= r.rating %>/5</td>
        <td><%= r.approved ? "так" : "ні" %></td>
        <td class="row">
          <%= form_with model: [:admin, r], url: admin_review_path(r), method: :patch, local: true do |f| %>
            <%= f.hidden_field :approved, value: (!r.approved) %>
            <%= f.submit(r.approved ? "Сховати" : "Опублікувати", class: "btn btn-sm") %>
          <% end %>
          <%= button_to "Видалити", admin_review_path(r), method: :delete, class: "btn btn-sm", data: { confirm: "Точно?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
