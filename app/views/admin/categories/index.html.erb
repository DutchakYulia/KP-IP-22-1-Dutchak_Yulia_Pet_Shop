<h1>Категорії</h1>
<div class="row">
  <%= link_to "Додати", new_admin_category_path, class: "btn" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>ID</th><th>Назва</th><th>Slug</th><th>Для кого</th><th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.slug %></td>
        <td><%= c.animal %></td>
        <td class="row">
          <%= link_to "Редагувати", edit_admin_category_path(c), class: "btn btn-sm" %>
          <%= button_to "Видалити", admin_category_path(c), method: :delete, class: "btn btn-sm", data: { confirm: "Видалити категорію?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
