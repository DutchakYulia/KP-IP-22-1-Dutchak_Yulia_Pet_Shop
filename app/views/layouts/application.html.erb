<!DOCTYPE html>
<html lang="uk">
  <head>
    <title>PetShop Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <script>
      (() => {
        const KEY = "petshop-theme";
        const setTheme = (mode) => {
          document.documentElement.classList.toggle("theme-light", mode === "light");
          localStorage.setItem(KEY, mode);
          const btn = document.getElementById("theme-toggle");
          if (btn) btn.textContent = mode === "light" ? "Нічна тема" : "Денна тема";
        };
        const saved = localStorage.getItem(KEY);
        const initial = saved || "light";
        setTheme(initial);
        document.addEventListener("DOMContentLoaded", () => {
          const btn = document.getElementById("theme-toggle");
          if (!btn) return;
          btn.addEventListener("click", () => {
            const next = document.documentElement.classList.contains("theme-light") ? "dark" : "light";
            setTheme(next);
          });
        });
      })();
    </script>
  </head>

  <body>
    <header class="topbar">
      <div class="container">
        <div class="brand"><%= link_to "PetShop Store", root_path %></div>

        <nav class="nav">
          <%= link_to "Каталог", root_path %>
          <%= link_to "Контакти", new_contact_message_path %>
          <%= link_to "Кошик (#{cart_count})", cart_path %>
          <% if logged_in? %>
            <%= link_to "Мої замовлення", orders_path %>
            <% if current_user.admin? %>
              <%= link_to "Адмінка", admin_root_path %>
            <% end %>
            <%= button_to "Вийти", logout_path, method: :delete, class: "linklike" %>
          <% else %>
            <%= link_to "Увійти", login_path %>
            <%= link_to "Реєстрація", signup_path %>
          <% end %>
          <button type="button" class="btn btn-ghost" id="theme-toggle">Денна тема</button>
        </nav>
      </div>
    </header>

    <main class="container">
      <% if flash[:notice] %><div class="flash flash-ok"><%= flash[:notice] %></div><% end %>
      <% if flash[:alert] %><div class="flash flash-bad"><%= flash[:alert] %></div><% end %>

      <%= yield %>
    </main>

    <footer class="footer container">
      <small>Створено на Ruby on Rails • PetShop Store</small>
    </footer>
  </body>
</html>
