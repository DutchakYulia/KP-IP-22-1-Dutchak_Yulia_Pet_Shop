<h1>Кошик</h1>

<% if current_cart.empty? %>
  <p>Кошик порожній.</p>
  <%= link_to "Повернутися до каталогу", root_path, class: "btn" %>
<% else %>
  <% placeholder = asset_path("placeholder.svg") %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Назва</th>
        <th>Ціна</th>
        <th>Кількість</th>
        <th>Сума</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% total = 0.to_d %>
      <% current_cart.each do |pid, qty| %>
        <% p = @products[pid.to_i] %>
        <% next unless p %>
        <% line = p.price.to_d * qty.to_i %>
        <% total += line %>
        <tr>
          <td>
            <%= image_tag(p.image_url.presence || placeholder, alt: p.title, class: "cart-thumb", onerror: "this.onerror=null;this.src='#{placeholder}'") %>
          </td>
          <td><%= link_to p.title, product_path(p) %></td>
          <td><%= number_to_currency(p.price, unit: "₴", format: "%n %u") %></td>
          <td>
            <%= form_with url: update_cart_path(product_id: p.id), method: :patch, local: true do %>
              <%= number_field_tag :quantity, qty.to_i, min: 0, class: "qty" %>
              <%= submit_tag "Оновити", class: "btn btn-sm" %>
            <% end %>
          </td>
          <td><%= number_to_currency(line, unit: "₴", format: "%n %u") %></td>
          <td><%= button_to "Видалити", remove_cart_path(product_id: p.id), method: :delete, class: "btn btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="price">Разом: <%= number_to_currency(total, unit: "₴", format: "%n %u") %></div>
    <div class="row">
      <%= button_to "Очистити", clear_cart_path, method: :delete, class: "btn btn-sm" %>
      <%= link_to "Оформити замовлення", new_checkout_path, class: "btn" %>
    </div>
  </div>
<% end %>
