<h1>Вхід</h1>

<%= form_with url: login_path, method: :post, local: true do %>
  <div class="field">
    <label>Email</label>
    <%= text_field_tag :email, params[:email], required: true %>
  </div>
  <div class="field">
    <label>Пароль</label>
    <%= password_field_tag :password, nil, required: true %>
  </div>
  <%= submit_tag "Увійти", class: "btn" %>
<% end %>
